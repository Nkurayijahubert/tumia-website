{
  "version": 2,
  "cleanUrls": true,
  "public": true,
  "github": {
    "silent": true
  },
  "buildCommand": "npm install && npm run build",
  "outputDirectory": "dist/public",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/" }
  ]
}